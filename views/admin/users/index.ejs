<body>
<%- include ('../../partials/navbar.ejs') %>
<div class="container">
    <hr>
    <h2>Usuários</h2>
    <a class="btn btn-success" href="/admin/users/create">Criar novo usuário</a>
    <br>
    <br>
    <table class="table table-bordered">
        <thead> <!-- cabeçalho da tabela -->
            <tr> <!-- linha -->
                <th>ID</th> <!-- colunas -->
                <th>E-mail</th>
    
            </tr>
        </thead>
        <tbody> <!-- corpo da tabela -->      
            <% users.forEach(user => { %>
                <tr>
                    <th><%= user.id %></th>
                    <th><%= user.email %></th>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
</body>

