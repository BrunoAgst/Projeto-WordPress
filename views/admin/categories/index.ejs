<%- include ('../../partials/header.ejs') %>
<body>
<%- include ('../../partials/navbar.ejs') %>
<div class="container">
    <hr>
    <h2>Categorias</h2>
    <hr>
    <table class="table table-bordered">
        <thead> <!-- cabeçalho da tabela -->
            <tr> <!-- linha -->
                <th>ID</th> <!-- colunas -->
                <th>Titulo</th>
                <th>Slug</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody> <!-- corpo da tabela -->
            
            <% categories.forEach(category => { %>
                <tr>
                    <th><%= category.id %></th>
                    <th><%= category.title %></th>
                    <th><%= category.slug %></th>
                    <th></th>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
</body>
